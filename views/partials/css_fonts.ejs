.slant { font-style: italic }

a {
	text-decoration: none;
	color: #000;
}

p {
	line-height: 1.5em;
	font-size: 1.4em;
	text-align: left;
	padding-top: 2em;
}

.line_1-5 {	line-height: 1.5em }
.letter-spaced { letter-spacing: 0.1em }


.cinzel { font-family: Cinzel, serif }
.junge { font-family: Junge, sans-serif }

.font_vlarge {	font-size:4em }
.font_large { font-size: 2.4em }
.font_big { font-size: 1.8em }
.font_medium { font-size: 1.5em }
.font_normal { font-size: 1.3em }

.triple_line_spacing { line-height: 3em }
.double_line_spacing { line-height: 2em}

.text_left { text-align: left }
.text_center { text-align: center }

@media all and (min-width: 100px) and (max-width: 600px) {
/*--------------------------------------------------------------------*/
	.font_large { font-size: 1.6em	}
	.font_big {	font-size: 1.4em }
	.font_medium {	font-size: 1.3em }
	.font_normal { font-size: 1.1em }
}
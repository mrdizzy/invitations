h1,h2,h3,h4,h5 {font-weight:normal}

* {
	border: 0;
	padding: 0;
	margin: 0;
}

body, select{ font-family: Raleway, sans-serif; }

img,
.centred {
	display: block;
	margin: 0 auto;
	text-align: center;
}

img { width: 100%; }

.flexbox,
.options_flex {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-between;
}

.flexbox_item { width: 275px; }

.bg-green {	background-color: #8B0; }
.white { color: #FFF; }


.element_hover,
.opacity_4 {
	opacity: 0.4;
}

.element_hover:hover { opacity: 1; }

input {
	border: 1px solid #ccc;
	display: block;
	width: 100%;
	font-size: 1.5em;
	padding: 0.75em 0.75em 0.75em 0.75em;
	font-family: Raleway, sans-serif;
	box-shadow: inset 0 1px 3px #ddd;
	border-radius: 8px;
}

button {
	border-bottom-right-radius: 1.5em;
	border-top-left-radius: 1.5em;
	padding: 1.5em 0.75em 1.5em 0.75em
}


.block { display:block; }

.bring_to_front,
.bgwhite {
	z-index: 500;
	background-color: #FFF;
}

.inline { display: inline; }

.clear { clear: both; }

.hidden { display: none; }

#casamiento_logo {
	position: fixed;
	width: 222px;
	padding: 5px;
	border-bottom-right-radius: 10px;
}

#browse_container {
	width: 225px;
	position: fixed;
	right: 0;
	left: 0;
	border-bottom-left-radius: 10px;
	border-bottom-right-radius: 10px;
	padding: 0 5px 5px 5px;
	font-size: 1.3em;
}

#dreams_slogan {
	right: 0;
	padding-left: 5px;
	position: fixed;
	border-bottom-left-radius: 10px;
	width: 210px;
}


footer {
	padding: 2em;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}

.shell {
	padding: 0.25em;
	width: 25px;
	position: relative;
	top: -0.5em;
}


@media all and (min-width: 800px) and (max-width: 1200px) {
	/* ----------------------------------------------------------------------------- */
	#casamiento_logo { width: 170px; }
	#dreams_slogan {
		width: 160px;
		padding-top: 10px;
	}
}

/* Phablet */

@media all and (min-width: 600px) and (max-width: 800px) {
	/* ----------------------------------------------------------------------------- */
	#casamiento_logo { width: 170px; }
	#dreams_slogan {
		width: 160px;
		padding-top: 10px;
	}
}

@media all and (min-width: 100px) and (max-width: 600px) {
/*----------------------------------------------------------------------------------------------*/
	#casamiento_logo {
		float: left;
		border-bottom-right-radius: 5px;
		position: static;
		width: 120px;
	}
	footer {
		flex-direction: column;
		justify-content: center;
		text-align: center;
	}
	#browse_container {
		width: 82px;
		font-size: 1em;
	}

	input {
		font-size: 1.2em;
		padding: 0.75em 0.25em 0.75em 0.25em;
	}

	#book {
		margin: 0 auto;
		padding-top: 2px;
		width: 25px;
	}
	#dreams_slogan {
		border-bottom-left-radius: 5px;
		float: right;
		padding-top: 8px;
		padding-left: 2px;
		position: static;
		width: 135px;
	}
}
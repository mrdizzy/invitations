<form action="https://www.paypal.com/cgi-bin/webscr" method="post" class="pure-form form-aligned">

  <input type="hidden" name="cmd" value="_xclick">
  <input type="hidden" name="business" value="paypal@dizzy.co.uk">

  <!-- Specify details about the item that buyers will purchase. -->
  <input type="hidden" name="item_name" value="<%= chosen_sample %>" id="paypal_item">
  <input type="hidden" name="amount" value="<%- sample %>">
  <input type="hidden" name="currency_code" value="GBP">

  <button type="submit" style="max-width:300px" class="width_70 margin_top_medium centred pure-button pure-button-primary">
    <img src="/images/furniture/PayPal.svg" id="paypal_logo" style="width:140px;" />
  </button>

</form>

			<img src="/images/logo/genesis_product.svg" id="genesis" style="border-bottom:1px solid black;padding-bottom:2em;padding-top:75px;width:150px;" />


			<h1 style="font-family:'TP';font-size:24pt;letter-spacing:0.2em">
				&mdash;<%= product.name %>&mdash;</h1>

			<img src="/images/furniture/shell.svg" style="width:25px;padding:1em;" />
			<h2 style="font-family:'Gara';letter-spacing:0.25em;font-size:16pt;"><%= product.description %></h2>
			<div id="form_panel">
				<img src="/images/homepage/icons/sample.svg" style="width:50px;display:block;margin:0 auto;margin-top:-2em;" />

